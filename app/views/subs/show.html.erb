<h1><%= @sub.title %></h1>
<ul>
  <li>Description: <%= @sub.description %></li>
  <li>Mod: <%= @sub.moderator.username %></li>
</ul>


<%= link_to "Edit sub", edit_sub_url(@sub) %>
<%= button_to "Delete sub", sub_url(@sub), method: :delete %>
<%= link_to "All subs", subs_url %>

<% @sub.posts.each do |post| %>
  <li><%= link_to post.title, post_url(post) %></li>
<% end %>

<%= link_to "New post!", new_post_url %>
